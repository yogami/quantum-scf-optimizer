{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "export PYTHONPATH=$PYTHONPATH:$(pwd)/backend && uvicorn backend.api.main:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 60
    }
}